{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "npm run nodemon",
    "start": "export APP_ENV=production; node -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config build/index.js",
    "build": "tsc",
    "nodemon": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config --exec 'ts-node --files' src/index.ts",
    "test": "export APP_ENV=test; jest"
  },
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.5",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.23",
    "@types/mongoose-paginate-v2": "^1.6.5",
    "@types/mongoose-unique-validator": "^1.0.4",
    "@types/supertest": "^2.0.11",
    "dotenv": "^10.0.0",
    "eslint": "^7.27.0",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "concurrently": "^6.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.10",
    "mongoose-paginate-v2": "^1.6.3",
    "mongoose-private": "^0.1.3",
    "mongoose-unique-validator": "^2.0.3",
    "nodemon": "^2.0.7"
  }
}
